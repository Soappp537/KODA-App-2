<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context=".MyAccountActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/initials_textview"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:textSize="100sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="username text here"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/id_textview"
            android:text="username id show here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />

        <!--Line break lang to:-->
        <View
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="5dp"
            android:background="#9A736F6F" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_parent"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE PARENT"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/deep_red"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logOut_parent"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="#FF3D00"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</RelativeLayout>