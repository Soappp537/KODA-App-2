<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Activities.ChildDetails">

    <!--tdfd-->
    <LinearLayout
        android:id="@+id/the_LayoutForThisChildGetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/cont_for_childName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:textSize="40sp"
            android:text="Child's First Name"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/usageTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:textSize="18sp"
            android:text="Screentime: 00:00"
            tools:ignore="HardcodedText" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_lock_apps"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock Apps"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:backgroundTint="@color/orange"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_screentime"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screentime\nManagement"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:backgroundTint="@color/orange"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_WebFilter"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web Filtering"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:backgroundTint="@color/orange"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            tools:ignore="HardcodedText" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_DeviceScheduling"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Scheduling"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:backgroundTint="@color/orange"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_child"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE CHILD"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>
