<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ChildDetails">

    <!--t-->
    <LinearLayout
        android:id="@+id/the_LayoutForThisChildGetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/cont_for_childName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:textSize="40sp"
            android:text="Child's First Name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_lock_apps"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock Apps"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColor"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_screentime"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screentime\nManagement"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColor"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_WebFilter"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web Filtering"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColor"
            app:cornerRadius="8dp"
            android:layout_marginBottom="10dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:rippleColor="@color/rippleColor"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </LinearLayout>

</RelativeLayout>
