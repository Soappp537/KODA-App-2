<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:gravity="center"
    tools:context=".addChildInfo">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Child"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/child_firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="16dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/child_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/child_firstName"
        android:layout_marginTop="16dp"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/child_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/child_lastName"
        android:layout_marginTop="16dp"
        android:hint="Age"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add child"
        android:textSize="20dp"
        android:layout_below="@id/child_age"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
