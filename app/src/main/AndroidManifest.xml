<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KODAApplication"
        tools:targetApi="31">
        <activity
            android:name=".MyAccountActivity"
            android:exported="false"
            android:theme="@style/Theme.KODAApplication" />
        <activity
            android:name=".AppListActivity"
            android:exported="false" />
        <activity
            android:name=".pageForWebFiltering"
            android:exported="false" />
        <!--
        <activity
            android:name=".AppList"
            android:exported="false" />
        -->
        <activity
            android:name=".ChildDetails"
            android:exported="false" />
        <activity
            android:name=".addChildInfo"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".mainScreen"
            android:exported="false" />
        <activity
            android:name=".Childscreen"
            android:label="@string/title_activity_Child_homescreen"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="fullSensor"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"> <!-- originally true -->
        </activity>
        <activity
            android:name=".BlockedActivity"
            android:exported="false"
            android:label="Blocked Screen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>